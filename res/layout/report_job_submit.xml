<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/nbc_grey"
    android:padding="8dp" >
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/round_corners"
        android:orientation="vertical"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbars="vertical" >

	<LinearLayout
	    android:id="@+id/reportTypeLayout"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentTop="true"
	    android:layout_margin="10dip"
	    android:background="@color/nbc_grey_button_bg"
	    android:clickable="true"
	    android:orientation="vertical"
	    android:padding="8dp" >
<TextView
	        android:id="@+id/reportType"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="Flytipping"
	        android:textColor="@color/actionBarText" />

	</LinearLayout>

    <EditText
        android:id="@+id/reportDescriptionEditText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/reportTypeLayout"
        android:layout_margin="10dip"
        android:gravity="top"
        android:hint="@string/report_description"
        android:inputType="textLongMessage"
        android:lines="5"
        android:padding="8dp" >

        <requestFocus />
    </EditText>

	<LinearLayout
	    android:id="@+id/imageLayout"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/reportDescriptionEditText"
	    android:layout_margin="10dip"
	    android:background="@color/actionBarText"
	    android:orientation="vertical"
	    android:padding="5dip" >

	    <ImageButton
	        android:id="@+id/reportImageButton"
	        android:layout_width="fill_parent"
	        android:layout_height="80dip"
	        android:background="@color/nbc_grey"
	        android:contentDescription="Take a photo"
	        android:src="@drawable/pin"
	        android:clickable="true" />
    <ImageView
	        android:id="@+id/reportImagePreview"
	        android:layout_width="fill_parent"
	        android:layout_height="80dip"
	        android:adjustViewBounds="false"
	        android:clickable="true"
	        android:contentDescription="Supporting Image"
	        android:scaleType="centerCrop"
	        android:src="@drawable/pin" />
	    
	</LinearLayout>

	<Button
	    android:id="@+id/reportSubmitButton"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/imageLayout"
	    android:layout_margin="10dip"
	    android:background="@drawable/nbc_button"
	    android:padding="10dip"
	    android:text="Report It"
	    android:textColor="#FFFFFFFF"
	    android:textStyle="bold" />

</LinearLayout>
</RelativeLayout>