

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/actionBarText"
    android:orientation="vertical"
    android:padding="@dimen/baseline"
    android:scrollbarStyle="outsideOverlay"
    android:scrollbars="vertical" >
	<ScrollView 
    android:id="@+id/findit_main_ScrollView"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:scrollbarStyle="outsideOverlay" >
    
	    <LinearLayout
        android:id="@+id/findit_main_LinearLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/actionBarText"
        android:orientation="vertical" >
    <LinearLayout
        android:id="@+id/findit_progress_LinearLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/baseline"
        android:background="@color/actionBarText"
        android:minHeight="@dimen/baseline_eight"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/findit_step_1"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginRight="@dimen/baseline"
            android:layout_weight="1"
            android:src="@drawable/progress_line_done" />

        <ImageView
            android:id="@+id/findit_step_2"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginRight="@dimen/baseline"
            android:layout_weight="1"
            android:src="@drawable/progress_line_current" />

        <ImageView
            android:id="@+id/findit_step_3"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginRight="@dimen/baseline"
            android:layout_weight="1"
            android:src="@drawable/progress_line" />

        <ImageView
            android:id="@+id/findit_step_4"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:src="@drawable/progress_line" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/findit_post_code_LinearLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/actionBarText"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/findit_post_code_title_TextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/baseline"
            android:paddingBottom="@dimen/baseline_eight"
            android:text="@string/findit_postcode_title"
            android:textColor="@color/nbc_red_border"
            android:textSize="@dimen/text_size_main_title" />

        <TextView
            android:id="@+id/findit_post_code_title_desc_TextView"
            style="?android:attr/listSeparatorTextViewStyle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/baseline"
            android:paddingBottom="@dimen/baseline_eight"
            android:text="@string/findit_postcode_desc"
            android:textSize="@dimen/text_size_main_subtext" />

        <EditText
            android:id="@+id/findit_post_code_preview_EditText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_content_edit"
            android:ems="10"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="@string/findit_postcode_title"
            android:paddingBottom="@dimen/baseline" />

    </LinearLayout>
    </LinearLayout>
</ScrollView>
    <Button
        android:id="@+id/findit_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/nbc_button"
        android:padding="10dp"
        android:text="@string/next_button_text"
        android:textColor="#FFFFFFFF"
        android:textStyle="bold" />

</RelativeLayout>
