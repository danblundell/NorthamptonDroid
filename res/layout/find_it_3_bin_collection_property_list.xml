<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/find_bin_collection_RelativeLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/actionBarText"
    android:orientation="vertical"
    android:padding="@dimen/baseline"
    android:scrollbarStyle="outsideOverlay"
    android:scrollbars="vertical" >

    <LinearLayout
        android:id="@+id/findit_bin_collection_progress_LinearLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/baseline"
        android:minHeight="@dimen/baseline_eight"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/findit_step_1"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginRight="@dimen/baseline"
            android:layout_weight="1"
            android:src="@drawable/progress_line_done" />

        <ImageView
            android:id="@+id/findit_step_2"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginRight="@dimen/baseline"
            android:layout_weight="1"
            android:src="@drawable/progress_line_done" />

        <ImageView
            android:id="@+id/findit_step_3"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginRight="@dimen/baseline"
            android:layout_weight="1"
            android:src="@drawable/progress_line_current" />

        <ImageView
            android:id="@+id/findit_step_4"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:src="@drawable/progress_line" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/findit_bin_collection_LinearLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/findit_bin_collection_progress_LinearLayout"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/findit_bin_collection_title_TextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/baseline"
            android:paddingBottom="@dimen/baseline_eight"
            android:text="@string/findit_bin_collection_day"
            android:textColor="@color/nbc_red_border"
            android:textSize="@dimen/text_size_main_title" />

        <TextView
            android:id="@+id/findit_bin_collection_title_desc_TextView"
            style="?android:attr/listSeparatorTextViewStyle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/baseline"
            android:paddingBottom="@dimen/baseline_eight"
            android:text="@string/findit_bin_collection_address_text"
            android:textSize="@dimen/text_size_main_subtext" />

        <Spinner
            android:id="@+id/findit_properties_spinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical" />
    </LinearLayout>

    <Button
        android:id="@+id/findit_bin_collection_props_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/nbc_button"
        android:padding="10dp"
        android:text="@string/findit_bin_collection_find_text"
        android:textColor="#FFFFFFFF"
        android:textStyle="bold" />

</RelativeLayout>